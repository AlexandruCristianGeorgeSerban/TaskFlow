package com.taskflow.action;

import com.taskflow.model.Category;
import com.taskflow.persistence.CategoryPersistence;
import com.taskflow.ui.MainFrame;
import com.taskflow.persistence.XmlDomHandler;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.io.File;
import java.util.List;

public class ExportAction extends AbstractAction {
	private static final long serialVersionUID = 1L;
	
    private final MainFrame frame;
    private final CategoryPersistence saver;

    public ExportAction(MainFrame frame, CategoryPersistence saver) {
        super("Export XML");
        this.frame = frame;
        this.saver = saver;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        JFileChooser chooser = new JFileChooser();
        if (chooser.showSaveDialog(frame) != JFileChooser.APPROVE_OPTION) {
            return;
        }

        File file = chooser.getSelectedFile();
        try {
            // Colectăm toate categoriile din toate root-urile
        	List<RootGroup> roots = frame.getRoots();  // sau taskService.getAllRoots()
        	XmlDomHandler saver = new XmlDomHandler();
                .getAllRoots().stream()
                .flatMap(rg -> rg.getCategories().stream())
                .toList();

            // Salvăm direct List<Category> fără cast
            saver.saveRootGroups(roots, file);
        } catch (Exception ex) {
            frame.showError(ex);
        }
    }
}

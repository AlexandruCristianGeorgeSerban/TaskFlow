package com.taskflow.action;

import com.taskflow.model.Category;
import com.taskflow.model.Task;
import com.taskflow.service.TaskService;
import com.taskflow.ui.MainFrame;

import javax.swing.*;
import java.awt.event.ActionEvent;

/** InverseazÄƒ statusul completed al task-ului selectat. */
public class ToggleCompletedAction extends AbstractAction {
    private final MainFrame frame;
    private final TaskService service;

    public ToggleCompletedAction(MainFrame frame, TaskService service) {
        super("Toggle Completed");
        this.frame = frame;
        this.service = service;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        Task t = frame.getSelectedTask();
        if (t == null) {
            JOptionPane.showMessageDialog(frame,
                "Select a task to toggle completion.",
                "Info", JOptionPane.INFORMATION_MESSAGE);
            return;
        }
        t.setCompleted(!t.isCompleted());
        service.updateTask(t);
        frame.refreshAfterChange(frame.getSelectedCategory());
    }
}

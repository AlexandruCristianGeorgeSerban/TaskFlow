package com.taskflow.service;

import com.taskflow.model.RootGroup;
import com.taskflow.model.Category;
import com.taskflow.model.Task;

import java.util.List;

/**
 * Serviciu central pentru manipularea RootGroup, Category și Task.
 */
public interface TaskService {
    /** Returnează toate root‐urile. */
    List<RootGroup> getAllRoots();

    /** Adaugă un nou root. */
    void addRoot(RootGroup root);

    /** Modifică un root existent (înlocuiește datele din root cu cele din obiect). */
    void updateRoot(RootGroup root);

    /** Adaugă o categorie sub root-ul specificat. */
    void addCategory(RootGroup root, Category category);

    /** Modifică o categorie existentă. */
    void updateCategory(Category category);

    /** Adaugă un task într-o categorie. */
    void addTask(Category category, Task task);

    /** Modifică un task existent. */
    void updateTask(Task task);
}

package com.taskflow.action;

import com.taskflow.model.RootGroup;
import com.taskflow.service.TaskService;
import com.taskflow.ui.MainFrame;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;

/** Editare Root existent */
public class EditRootAction extends AbstractAction {
    private static final long serialVersionUID = 1L;
    private final MainFrame frame;
    private final TaskService service;

    public EditRootAction(MainFrame frame, TaskService service) {
        super("Edit Root");
        this.frame = frame;
        this.service = service;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        RootGroup rg = frame.getSelectedRoot();
        if (rg==null) return;
        String name = JOptionPane.showInputDialog(frame,"Root name:",rg.getName());
        if (name==null || name.trim().isEmpty()) return;
        Color c = JColorChooser.showDialog(frame,"Choose root color",Color.decode(rg.getColorHex()));
        String hex = (c==null)?rg.getColorHex():String.format("#%02x%02x%02x",c.getRed(),c.getGreen(),c.getBlue());
        rg.setName(name.trim());
        rg.setColorHex(hex);
        service.updateRoot(rg);
        frame.refreshTreeAll();
    }
}

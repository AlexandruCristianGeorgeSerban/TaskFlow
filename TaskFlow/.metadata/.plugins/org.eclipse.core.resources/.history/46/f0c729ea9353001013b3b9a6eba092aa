package com.taskflow.action;

import com.taskflow.persistence.CategoryPersistence;
import com.taskflow.ui.MainFrame;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.io.File;
import java.util.List;

public class ExportAction extends AbstractAction {
	private static final long serialVersionUID = 1L;
	
    private final MainFrame frame;
    private final CategoryPersistence saver;

    public ExportAction(MainFrame frame, CategoryPersistence saver) {
        super("Export XML");
        this.frame = frame;
        this.saver = saver;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        JFileChooser ch = new JFileChooser();
        if (ch.showSaveDialog(frame)!=JFileChooser.APPROVE_OPTION) return;
        try {
            File f = ch.getSelectedFile();
            List<?> cats = frame.getTaskService().getAllRoots().stream()
                .flatMap(r->r.getCategories().stream())
                .toList();
            saver.save((List)cats, f);
        } catch (Exception ex) {
            frame.showError(ex);
        }
    }
}
